<article class='card'>
  <div class='card-body'>
    <p class='card-header text-bg-dark'>
      <a href='/post/{{id}}'>{{title}}</a>
    </p>
    <p class='card-text'>{{post_text}}</p>
  </div>
  <div class='card-body'>
    <p>Posted by
      {{user.username}}
      on
      {{format_date created_at}}
      |
      <a href='/post/{{id}}'> {{comments.length}} Comments</a></p>

  </div>
</article>