<section>
  <form class='edit-form'>
    <div class='mb-3'>
      <label for='post-title' class='form-label'>Title</label>
      <input
        class='form-control'
        type='text'
        name='post-title'
        value='{{post.title}}'
      />
    </div>
    <div class='mb-3'>
      <label for='post-text form-label'>Content</label>
      <textarea
        type='text'
        name='post-text'
        class='form-control'
      >{{post.post_text}}</textarea>
    </div>
    <button type='submit' class='btn btn-primary'>Update post</button>
    <button type='button' class='delete-post btn btn-danger'>Delete this post</button>

  </form>
</section>

<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>